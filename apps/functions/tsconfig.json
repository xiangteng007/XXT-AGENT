{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2022",
        "lib": [
            "es2022"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@config/*": [
                "./config/*"
            ],
            "@handlers/*": [
                "./handlers/*"
            ],
            "@services/*": [
                "./services/*"
            ],
            "@models/*": [
                "./models/*"
            ],
            "@utils/*": [
                "./utils/*"
            ],
            "@types/*": [
                "./types/*"
            ]
        }
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "**/*.test.ts"
    ]
}